{
    "name": "bird-migration-altitude-profiles",
    "title": "Bird migration altitude profiles",
    "description": "Bird migration data at different altitudes retrieved from 5 weather radars.",
    "keywords": [
        "radar",
        "bird migration"
    ],
    "datapackage-version": "1.0-beta.10",
    "licenses": [
        {
            "type": "cc-zero",
            "url": "http://creativecommons.org/publicdomain/zero/1.0/"
        }
    ],
    "sources": [
        {
            "name": "ENRAM",
            "web": "http://enram.eu"
        }
    ],
    "maintainers": [
        {
            "name": "Hans van Gasteren",
            "web": "https://twitter.com/hvangasteren"
        },
        {
            "name": "Peter Desmet",
            "web": "http://peterdesmet.com"
        }
    ],
    "base": "https://github.com/enram/data-challenge/tree/master/data/bird-migration-altitude-profiles/",
    "resources": [
        {
            "path": "bird-migration-altitude-profiles.csv",
            "name": "bird-migration-altitude-profiles",
            "format": "csv",
            "mediatype": "text/csv",
            "schema": {
                "fields": [
                    {
                        "name": "radar_name",
                        "description": "Name of the radar that recorded the data.",
                        "type": "string"
                    },
                    {
                        "name": "radar_id",
                        "description": "Numeric identifier for the radar.",
                        "type": "integer"
                    },
                    {
                        "name": "start_time",
                        "description": "Start timestamp for a measurement. Defines a measurement timeframe in combination with end_time.",
                        "type": "date"
                    },
                    {
                        "name": "end_time",
                        "description": "End timestamp for a measurement.",
                        "type": "date"
                    },
                    {
                        "name": "altitude",
                        "description": "Altitude of the measurement.",
                        "type": "number",
                        "unit": "km"
                    },
                    {
                        "name": "bird_reflectivity",
                        "description": "Bird reflectivity as measured by the radar.",
                        "type": "number",
                        "unit": "dBZ"
                    },
                    {
                        "name": "radial_velocity_std",
                        "description": "Standard deviation of the radial velocity (= the general movement speed in the direction of the radar). To differentiate between bird and other reflectivity, use a threshold of >= 2.0 => birds.",
                        "type": "number",
                        "unit": "m/s"
                    },
                    {
                        "name": "u_speed",
                        "description": "General movement horizontal speed towards East.",
                        "type": "number",
                        "unit": "m/s"
                    },
                    {
                        "name": "v_speed",
                        "description": "General movement horizontal speed towards North.",
                        "type": "number",
                        "unit": "m/s"
                    },
                    {
                        "name": "w_speed",
                        "description": "Vertical speed",
                        "type": "number",
                        "unit": "m/s"
                    },
                    {
                        "name": "ground_speed",
                        "description": "General movement ground speed calculated from u_speed and v_speed.",
                        "type": "number",
                        "unit": "m/s"
                    },
                    {
                        "name": "direction",
                        "description": "General movement direction in degrees. 0 = North.",
                        "type": "number",
                        "unit": "degrees"
                    },
                    {
                        "name": "bird_density",
                        "description": "Calculated number of birds per cubic kilometer.",
                        "type": "number",
                        "unit": "birds/km3"
                    },
                    {
                        "name": "number_of_bins",
                        "description": "Number of original measurement points around radar. Is lower for higher altitudes.",
                        "type": "integer"
                    }
                ]
            }
        }
    ]
}
